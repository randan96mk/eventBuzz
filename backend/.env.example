# =============================================================================
# EventBuzz API â€” Environment Variables
# Copy this file to .env and fill in your values.
# =============================================================================

# -- Application --
ENVIRONMENT=dev
APP_SECRET_KEY=change-me-to-a-random-secret

# -- Database (PostgreSQL + PostGIS) --
DATABASE_URL=postgresql+asyncpg://eventbuzz:eventbuzz@localhost:5432/eventbuzz

# -- Redis --
REDIS_URL=redis://localhost:6379/0

# -- Meilisearch --
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_KEY=

# -- Keycloak --
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=eventbuzz

# -- CORS (comma-separated list handled by pydantic-settings) --
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# -- Database pool --
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600

# -- Uvicorn (used by entrypoint.sh) --
UVICORN_WORKERS=1
LOG_LEVEL=info
